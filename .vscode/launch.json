    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo WSL",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python3",
            "program": "${workspaceFolder}/src/odoo/odoo-bin",
            "args": [
                "-d",
                "odoo-db",
                "-r",
                "odoo",
                "-w",
                "odoo",
                "--limit-time-real",
                "999999999",
                "--addons-path",
                "COMMA_SEPARATED_ADDONS_MODULES_RELATIVE_PATH", // "${workspaceFolder}/src/odoo/odoo/addons,${workspaceFolder}/src/odoo/addons,${workspaceFolder}/src/odoo_enterprise" is for Odoo pre-bundled addons
                "-i",
                "COMMA_SEPARATED_MODULES_NAME_LIST",
                "-u",
                "COMMA_SEPARATED_MODULES_NAME_LIST",
                "--dev",
                "all",
                // "--log-handler",
                // ":DEBUG",
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/odoo",
                "ODOO_RC": "${workspaceFolder}/config/odoo.conf",
                "OPENERP_SERVER": "${workspaceFolder}/config/odoo.conf"
            }
        },
        {
            "name": "Odoo Testing WSL",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python3",
            "program": "${workspaceFolder}/src/odoo/odoo-bin",
            "args": [
                "-d",
                "odoo-db",
                "-r",
                "odoo",
                "-w",
                "odoo",
                "--limit-time-real",
                "999999999",
                "--addons-path",
                "COMMA_SEPARATED_ADDONS_MODULES_RELATIVE_PATH", // "${workspaceFolder}/src/odoo/odoo/addons,${workspaceFolder}/src/odoo/addons,${workspaceFolder}/src/odoo_enterprise" is for Odoo pre-bundled addons
                "-i",
                "COMMA_SEPARATED_MODULES_NAME_LIST",
                "-u",
                "COMMA_SEPARATED_MODULES_NAME_LIST",
                "--dev",
                "all",
                "--test-enable",
                "--stop-after-init"
                // "--log-handler",
                // ":DEBUG",
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/odoo",
                "ODOO_RC": "${workspaceFolder}/config/odoo.conf",
                "OPENERP_SERVER": "${workspaceFolder}/config/odoo.conf"
            }
        },
